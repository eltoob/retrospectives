# A sample Gemfile
source "https://rubygems.org"

gem "rails"
gem 'sqlite3'
gem 'slim'
gem 'simple_form'

group :test do
  gem "rspec-rails"
  gem 'activerecord-nulldb-adapter'
  gem 'capybara'
  gem 'database_cleaner'
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

