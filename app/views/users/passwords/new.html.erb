

<div class='form-vertical well span5'>
  <h2>Forgot your password?</h2>
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.error_notification %>

    <div class="inputs">
      <%= f.input :email, :required => true, input_html:  {class: 'span9'} %>
    </div>

    <div class="actions">
      <%= f.button :submit, "Send me instructions", class: 'btn span9' %>
    </div>
  <% end %>

  <%= render "links" %>
</div>
